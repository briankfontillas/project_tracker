extends layout
block main
  form(class="fade-in" action="/ticket/create", method="post")
    fieldset
      dl
        dt
          label(for="title" id="ticket-title")
        dd
          input(type="text" name="title" id="ticket-title-input" placeholder="Enter ticket title here . . .")
      label(for="status") 
      select(name="status")
        option(value=`${statuses.todo}` default)=boardData.columns[0].title
        option(value=`${statuses.inProgress}`)=boardData.columns[1].title
        option(value=`${statuses.review}`)=boardData.columns[2].title
        option(value=`${statuses.testing}`)=boardData.columns[3].title
        option(value=`${statuses.monitoring}`)=boardData.columns[4].title
        option(value=`${statuses.done}`)=boardData.columns[5].title
      dl
        dt
          label(for="description") Description:
        dd
          textarea(name="description") 
      label(for="priority")
      select(name="priority")
        option(default value="1") 1
        option(value="2") 2
        option(value="3") 3
        option(value="4") 4
      input(type="submit" value="Create ticket" class="submit")
  a(href="/dashboard")
    button(class="cancel-btn") X